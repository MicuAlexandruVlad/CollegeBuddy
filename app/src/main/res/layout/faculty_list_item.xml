<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_faculty_name"
                android:textSize="20sp"
                tools:text="Harvard"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/rl_join_faculty"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorAccent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_join_faculty"
                android:layout_alignParentEnd="true"
                android:paddingTop="6dp"
                android:elevation="2dp"
                android:layout_marginBottom="4dp"
                android:paddingBottom="6dp"
                android:paddingStart="16dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_round_primary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/tv_join"
                    android:text="Join"
                    android:layout_toEndOf="@id/iv_join"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/md_white"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/join"
                    android:id="@+id/iv_join"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_faculty_description"
            android:textColor="@color/md_black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_below="@id/rl_4"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_faculty_description"
            android:id="@+id/rl_2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iv_members"
                android:src="@drawable/members"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_num_members"
                tools:text="2019"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toEndOf="@id/iv_members"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/iv_groups"
                android:src="@drawable/group"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_num_groups"
                tools:text="15"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toStartOf="@id/iv_groups"
                android:layout_marginEnd="12dp"
                />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>