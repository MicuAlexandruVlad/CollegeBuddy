<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white"
    tools:context=".EditCollegeDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="Edit Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/material_blue_grey_700"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_1"
            android:layout_below="@id/tv_title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:text="College name"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_college_name"
            android:layout_below="@id/tv_label_1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:inputType="textCapWords"
            android:textColor="@color/md_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_2"
            android:layout_below="@id/et_college_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:text="College description"
            tools:ignore="HardcodedText" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/met_college_description"
            android:layout_below="@id/tv_label_2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:met_iconLeft="@drawable/description"
            android:inputType="textCapSentences|textMultiLine"
            android:textColor="@color/md_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_3"
            android:layout_below="@id/met_college_description"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:text="College address"
            tools:ignore="HardcodedText" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/met_college_address"
            android:layout_below="@id/tv_label_3"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:met_iconLeft="@drawable/location"
            android:inputType="textPostalAddress"
            android:textColor="@color/md_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_4"
            android:layout_below="@id/met_college_address"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:text="Country"
            tools:ignore="HardcodedText" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/met_college_country"
            android:layout_below="@id/tv_label_4"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:met_iconLeft="@drawable/country"
            android:inputType="textCapWords"
            android:textColor="@color/md_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_5"
            android:layout_below="@id/met_college_country"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:text="College phone number"
            tools:ignore="HardcodedText" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/met_college_phone_number"
            android:layout_below="@id/tv_label_5"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:met_iconLeft="@drawable/phone_number"
            android:inputType="phone"
            android:textColor="@color/md_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_6"
            android:layout_below="@id/met_college_phone_number"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:text="College web page"
            tools:ignore="HardcodedText" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/met_college_website"
            android:layout_below="@id/tv_label_6"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:met_iconLeft="@drawable/website"
            android:inputType="textWebEditText"
            android:textColor="@color/md_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_7"
            android:layout_below="@id/met_college_website"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:text="College image"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_8"
            android:layout_below="@id/tv_label_7"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/material_grey_400"
            android:textSize="14sp"
            android:text="Tap the image below to change it"
            tools:ignore="HardcodedText" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/cv_image_holder"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/md_white"
            android:layout_below="@id/tv_label_8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_college_photo"
                android:src="@drawable/add_college_image"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:maxHeight="300dp"
                />

        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_done"
            android:text="done"
            android:textSize="16sp"
            android:textColor="@color/md_white"
            android:background="@drawable/btn_round_accent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_below="@id/cv_image_holder"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</ScrollView>