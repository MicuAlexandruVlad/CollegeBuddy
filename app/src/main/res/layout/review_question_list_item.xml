<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/btn_layout_round"
    android:elevation="2dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/tv_question"
        android:textSize="18sp"
        tools:text="Q: How much is 4 + 4 ?"
        android:textColor="@color/md_black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tv_separator_1"
        android:layout_below="@id/tv_question"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorAccent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_num_possible_answers"
        android:layout_below="@id/tv_separator_1"
        android:textSize="16sp"
        tools:text="Possible answers: 5"
        android:layout_marginStart="16dp"
        android:textColor="@color/md_black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_question_type"
        android:layout_below="@id/tv_num_possible_answers"
        android:layout_marginTop="8dp"
        tools:text="Question type: Multiple choice"
        android:textStyle="normal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/md_black"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_num_correct_answers"
        tools:text="Correct answers: 2"
        android:textSize="16sp"
        android:textColor="@color/md_black"
        android:layout_below="@id/tv_question_type"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_num_incorrect_answers"
        tools:text="Incorrect answers: 3"
        android:textSize="16sp"
        android:textColor="@color/md_black"
        android:layout_below="@id/tv_num_correct_answers"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_question_explanation"
        tools:text="Explanation: Some stuff about this question"
        android:textSize="16sp"
        android:textColor="@color/md_black"
        android:layout_below="@id/tv_num_incorrect_answers"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/btn_edit_question"
        android:layout_below="@id/tv_question_explanation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_round_accent"
        android:textColor="@color/md_white"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>