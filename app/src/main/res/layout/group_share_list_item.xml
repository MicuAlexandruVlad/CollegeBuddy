<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_body"
    android:layout_margin="8dp"
    android:background="@drawable/btn_layout_round"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/cv_group_first_letter"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="22dp"
        >

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/group_border"
            android:padding="1dp">

            <TextView
                android:id="@+id/tv_group_name_first_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="W"
                android:textColor="@color/md_white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_group_name"
        android:textSize="16sp"
        android:textColor="@color/md_black"
        tools:text="Winners only group"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/cv_group_first_letter"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        />

</RelativeLayout>